  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Montserrat:wght@700&display=swap" rel="stylesheet"/>

  <style>
    :root {
      --red: #e50914;
      --red-dark: #b80710;
      --red-gradient: linear-gradient(135deg, #dd0404, #8a0007);
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Inter', sans-serif;
      background: #f8f9fa;
      min-height: 100%;
      overflow-x: hidden;
    }

    /* Animated Background */
    .dots-bg {
      position: fixed;
      inset: 0;
      pointer-events: none;
      z-index: 1;
      background: 
        radial-gradient(circle, rgba(229,9,20,0.25) 1px, transparent 1px) 0 0 / 40px 40px,
        radial-gradient(circle, rgba(229,9,20,0.15) 1px, transparent 1px) 20px 20px / 40px 40px;
      animation: dotsFlow 30s linear infinite;
      opacity: 0.6;
    }
    @keyframes dotsFlow {
      0%   { background-position: 0 0, 20px 20px; }
      100% { background-position: 80px 80px, 60px 60px; }
    }

    /* Top Header */
    .top-header {
      position: fixed;
      top: 0;
      left: 270px;
      right: 0;
      height: 70px;
      background: white;
      border-bottom: 1px solid #eee;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 25px;
      z-index: 999;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      transition: left 0.3s ease;
    }
    .menu-toggle {
      display: none;
      background: none;
      border: none;
      font-size: 1.7rem;
      color: var(--red);
      cursor: pointer;
    }
    .user-area {
      display: flex;
      align-items: center;
      gap: 14px;
    }
    .user-avatar {
      width: 44px;
      height: 44px;
      border-radius: 50%;
      background: var(--red);
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      font-size: 1.2rem;
      box-shadow: 0 4px 15px rgba(229,9,20,0.4);
    }

    /* Sidebar */
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      width: 270px;
      height: 100%;
      background: var(--red-gradient);
      color: white;
      z-index: 1000;
      padding-top: 20px;
      box-shadow: 12px 0 40px rgba(229,9,20,0.4);
      transition: transform 0.3s ease;
      overflow-y: auto;
      overflow-x: hidden;
    }

    /* Thin Custom Scrollbar - Red Theme */
    .sidebar::-webkit-scrollbar {
      width: 6px;
    }
    .sidebar::-webkit-scrollbar-track {
      background: rgba(255,255,255,0.1);
      border-radius: 10px;
    }
    .sidebar::-webkit-scrollbar-thumb {
      background: rgba(255,255,255,0.4);
      border-radius: 10px;
    }
    .sidebar::-webkit-scrollbar-thumb:hover {
      background: rgba(255,255,255,0.6);
    }

    .sidebar.active { transform: translateX(0); }
    @media (max-width: 992px) { 
      .sidebar { transform: translateX(-100%); }
      .top-header, .main-content { margin-left: 0 !important; }
      .top-header { left: 0; padding: 0 15px; }
      .menu-toggle { display: block; }
    }

    .sidebar .logo {
      text-align: center;
      padding: 30px 20px 25px;
      border-bottom: 1px solid rgba(255,255,255,0.15);
    }

    .sidebar .logo img {
      height: 72px;
      border-radius: 16px;
      padding: 8px;
      background: rgba(255,255,255,0.2);
      backdrop-filter: blur(12px);
      border: 2px solid rgba(255,255,255,0.3);
      box-shadow: 0 10px 30px rgba(229,9,20,0.5);
      transition: all 0.4s ease;
    }

    .sidebar .logo img:hover {
      transform: translateY(-6px) scale(1.08);
      box-shadow: 0 20px 40px rgba(229,9,20,0.7);
    }

    .nav-list { padding: 20px 0; }

    .nav-link, .dropdown-btn {
      display: flex;
      align-items: center;
      color: rgba(255,255,255,0.9) !important;
      padding: 15px 28px;
      transition: all 0.3s ease;
      font-weight: 500;
      text-decoration: none;
    }

    .nav-link i, .dropdown-btn i:first-child {
      font-size: 1.4rem;
      width: 38px;
      text-align: center;
    }

    .nav-link:hover, .nav-link.active,
    .dropdown-btn:hover, .dropdown-btn.active {
      background: rgba(255,255,255,0.2);
      color: white !important;
      border-left: 5px solid white;
      padding-left: 33px;
    }

    .nav-link.active {
      background: rgba(255,255,255,0.3);
      font-weight: 700;
    }

    /* Dropdown */
    .dropdown-btn {
      width: 100%;
      background: transparent;
      border: none;
      justify-content: space-between;
      cursor: pointer;
    }

    .dropdown-btn i:last-child {
      transition: transform 0.3s ease;
      font-size: 1.1rem;
    }
    .dropdown-btn.active i:last-child {
      transform: rotate(180deg);
    }

    .dropdown-menu {
      background: rgba(255,255,255,0.15);
      border: none;
      border-radius: 12px;
      margin: 8px 20px;
      padding: 10px 0;
      box-shadow: 0 8px 25px rgba(0,0,0,0.3);
      display: none;
      backdrop-filter: blur(10px);
    }

    .dropdown-menu.show { display: block; }

    .dropdown-item {
      color: #fff;
      padding: 11px 28px;
      font-size: 0.95rem;
      transition: 0.3s;
      display: flex;
      align-items: center;
    }

    .dropdown-item i {
      margin-right: 8px;
      width: 20px;
      text-align: center;
      font-size: 0.9rem;
    }

    .dropdown-item:hover {
      background: var(--red-dark);
      color: white;
      padding-left: 35px;
    }

    /* Main Content */
    .main-content {
      margin-left: 270px;
      margin-top: 70px;
      padding: 30px;
      min-height: calc(100vh - 70px);
      transition: margin-left 0.3s ease;
    }

    .welcome-card {
      background: white;
      border-radius: 24px;
      padding: 60px 40px;
      text-align: center;
      box-shadow: 0 15px 50px rgba(0,0,0,0.1);
      margin-bottom: 40px;
    }

    .welcome-title {
      font-family: 'Montserrat', sans-serif;
      font-size: 3rem;
      font-weight: 700;
      background: linear-gradient(to right, #e50914, #ff3333);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 12px;
    }

    .stats-card {
      background: white;
      border-radius: 20px;
      padding: 28px;
      text-align: center;
      box-shadow: 0 10px 35px rgba(0,0,0,0.08);
      transition: transform 0.3s ease;
      height: 100%;
    }

    .stats-card:hover { transform: translateY(-10px); }
    .stats-card i { font-size: 2.8rem; color: var(--red); margin-bottom: 18px; }
    .stats-card h3 { font-size: 2.2rem; font-weight: 700; color: #1a1a1a; margin: 0; }
    .stats-card p { margin: 8px 0 0; color: #666; }

    .sidebar-overlay {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.75);
      z-index: 998;
      backdrop-filter: blur(4px);
    }
    .sidebar-overlay.active { display: block; }
  </style>
</head>
