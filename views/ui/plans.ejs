      <div class="plan-card <%= plan.isFeatured ? 'featured' : '' %>">
        <% if (plan.isFeatured) { %>
          <div class="popular-badge">Most Popular</div>
        <% } %>
        <div class="plan-header">
          <h2><%= plan.name %></h2>
          <div class="plan-price">
            ₹<%= plan.price %>
            <span class="period">
              / <%= plan.durationMonths === 1 ? 'month' : `${plan.durationMonths} months` %>
            </span>
          </div>
        </div>

        <ul class="plan-features">
          <% plan.features.forEach(f => { %>
            <li>
              <i class="fas <%= f.included ? 'fa-check' : 'fa-times' %>"></i>
              <%= f.text %>
            </li>
          <% }) %>
        </ul>

        <% if (plan.price === 0) { %>
          <a href="#" class="subscribe-btn current-plan-btn">Current Plan</a>
        <% } else { %>
          <a href="/subscribe/<%= plan._id %>" class="subscribe-btn">Subscribe Now</a>
        <% } %>
      </div>
    <% }) %>
  </div>

