<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Purchase <%= plan.name %> | E TIMES INDIA 24</title>
  <meta name="google-adsense-account" content="ca-pub-7964315381421081">
  <link rel="shortcut icon" href="/logo/logo2.png" type="image/x-icon">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Antonio:wght@700&family=Roboto:wght@400;700&display=swap" rel="stylesheet" />

  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: "Roboto", sans-serif;
      background: #fff;
      color: #222;
      min-height: 100vh;
      position: relative;
      overflow-x: hidden;
    }

    /* Animated Background */
    .bg-spots {
      position: fixed; top: 0; left: 0; width: 100%; height: 100%;
      background: radial-gradient(circle at 20% 30%, #ff1a1a 0%, transparent 30%),
                  radial-gradient(circle at 80% 70%, #c80000 0%, transparent 35%),
                  radial-gradient(circle at 50% 10%, #ff4d4d 0%, transparent 28%),
                  radial-gradient(circle at 10% 80%, #ff3333 0%, transparent 32%),
                  radial-gradient(circle at 90% 20%, #e60000 0%, transparent 30%);
      background-size: 600px 600px, 700px 700px, 500px 500px, 650px 650px, 550px 550px;
      background-position: 0 0, 100px 200px, -50px -100px, 300px 400px, -200px 100px;
      opacity: 0.12;
      animation: floatSpots 45s ease-in-out infinite alternate;
      z-index: -1;
    }
    @keyframes floatSpots {
      0% { background-position: 0 0, 100px 200px, -50px -100px, 300px 400px, -200px 100px; }
      100% { background-position: 50px 50px, 150px 250px, 0 -50px, 350px 450px, -150px 150px; }
    }

    /* Header & Top Bar */
    header {
      background: #fff; padding: 12px 20px; position: sticky; top: 0; z-index: 1000;
      box-shadow: 0 4px 25px rgba(200,0,0,0.15); border-bottom: 3px solid #c80000;
    }
    .top-bar {
      display: flex; justify-content: space-between; align-items: center; max-width: 1600px; margin: 0 auto; gap: 15px;
    }
    .logo-img { height: 45px; }

    /* Live Info */
    .live-info {
      background: #111; color: #fff; padding: 8px 20px; display: flex; justify-content: space-between;
      font-size: 14px; flex-wrap: wrap; gap: 10px;
    }

    /* Full Category Bar */
    .categories-buttons-bar {
      background: linear-gradient(to bottom, #c80000, #a00000);
      padding: 9px 0; overflow-x: auto; white-space: nowrap; scrollbar-width: none;
      box-shadow: 0 4px 20px rgba(0,0,0,0.4); border-bottom: 3px solid #ff1744;
    }
    .categories-buttons-bar::-webkit-scrollbar { display: none; }
    .cat-btn {
      display: inline-block; background: #fff; color: #c80000; padding: 8px 14px; margin: 0 6px;
      border-radius: 12px; font-weight: 800; font-size: 15px; text-transform: uppercase;
      letter-spacing: 0.5px; text-decoration: none; transition: all 0.3s;
    }
    .cat-btn:hover { background: #ff1744; color: #fff; transform: translateY(-3px); box-shadow: 0 8px 20px rgba(255,23,68,0.6); }
    .cat-btn.active { background: #ff0000; color: #fff; border: 2px solid #fff; }

    /* New Beautiful Purchase Card */
    .purchase-wrapper { max-width: 520px; margin: 40px auto; padding: 0 15px; }
    .purchase-card {
      background: linear-gradient(135deg, #ffffff, #fff8f8);
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 15px 40px rgba(200,0,0,0.18);
      border: 3px solid #c80000;
      text-align: center;
      animation: slideUp 0.8s ease-out;
    }
    @keyframes slideUp {
      from { transform: translateY(50px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }

    .card-header {
      background: linear-gradient(135deg, #c80000, #ff1a1a);
      color: #fff;
      padding: 30px 20px;
    }
    .plan-name {
      font-size: 34px;
      font-weight: 700;
      margin-bottom: 8px;
    }
    .plan-duration {
      font-size: 18px;
      opacity: 0.95;
    }

    .card-body {
      padding: 40px 30px;
      background: #fff;
    }
    .price-tag {
      font-size: 58px;
      font-weight: 800;
      color: #c80000;
      margin: 10px 0;
      line-height: 1;
    }
    .price-tag small { font-size: 22px; font-weight: 600; }

    .auto-pay-label {
      display: flex; align-items: center; justify-content: center; gap: 12px;
      font-size: 17px; margin: 25px 0; color: #333;
    }
    .auto-pay-label input { transform: scale(1.3); }

    #payBtn {
      background: linear-gradient(to right, #c80000, #ff1744);
      color: #fff;
      padding: 18px 60px;
      border: none;
      border-radius: 50px;
      font-size: 22px;
      font-weight: 700;
      cursor: pointer;
      box-shadow: 0 10px 30px rgba(200,0,0,0.25);
      transition: all 0.3s;
    }
    #payBtn:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(200,0,0,0.35);
    }

    .success-message {
      background: #d4edda; color: #155724; padding: 16px; border-radius: 10px;
      font-size: 20px; font-weight: bold; margin-top: 20px; display: none;
    }

    .back-link {
      display: block; margin-top: 30px; color: #c80000; font-weight: 600;
      text-decoration: none; font-size: 17px;
    }

    /* Footer */
    footer { background: #111; color: #ccc; padding: 60px 20px 40px; margin-top: 80px; }
    .footer-grid { max-width: 1400px; margin: auto; display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 40px; }
    .footer-col h3 { color: #c80000; }

    .loader {
      position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: #fff;
      display: flex; flex-direction: column; justify-content: center; align-items: center;
      z-index: 9999; transition: opacity 0.6s;
    }
    .loader .spinner {
      width: 80px; height: 80px; border: 8px solid #f3f3f3; border-top: 8px solid #c80000;
      border-radius: 50%; animation: spin 1s linear infinite;
    }
    @keyframes spin { to { transform: rotate(360deg); } }

    @media (max-width: 600px) {
      .plan-name { font-size: 28px; }
      .price-tag { font-size: 46px; }
      #payBtn { font-size: 19px; padding: 16px 40px; }
      .cat-btn { font-size: 13px; padding: 6px 10px; margin: 0 4px; }
    }
  </style>
</head>
<body>

  <div class="bg-spots"></div>

  <!-- Loader -->
  <div class="loader" id="loader">
    <div class="spinner"></div>
    <p>Loading Your Plan...</p>
  </div>

  <!-- Header -->
<%- include("layout/header") %>

  <!-- Live Info -->
  <div class="live-info">
    <div id="liveTime"></div>
    <div id="weatherDisplay">Detecting location & weather...</div>
  </div>

  <!-- Full Category Bar -->
  <div class="categories-buttons-bar">
   
    <%- include("layout/buttons") %>
  </div>

  <!-- Beautiful Purchase Card -->
  <div class="purchase-wrapper">
    <div class="purchase-card">
      <div class="card-header">
        <div class="plan-name"><%= plan.name %></div>
        <div class="plan-duration"><%= plan.durationMonths %> Month<%= plan.durationMonths > 1 ? 's' : '' %> Plan</div>
      </div>

      <div class="card-body">
        <div class="price-tag">₹<%= plan.price.toLocaleString() %><small></small></div>

        <% if (plan.status === 'active') { %>
          <label class="auto-pay-label">
            <input type="checkbox" id="autoPay">
            <span>Enable Auto-Renew (Recommended)</span>
          </label>

          <button id="payBtn">Buy Now & Activate Instantly</button>

          <div id="successMsg" class="success-message">
            Payment Successful! Redirecting to dashboard...
          </div>
        <% } else { %>
          <div style="color:#d32f2f; font-weight:bold; font-size:19px; margin:20px 0;">
            This plan is currently unavailable.
          </div>
        <% } %>

        <a class="back-link" href="/plans">
          Back to All Plans
        </a>
      </div>
    </div>
  </div>

  <!-- Footer -->
    <%- include("layout/footer") %>


  <!-- Scripts -->
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script>
    // Live Time + Weather (same as main site)
    function updateTime() {
      const now = new Date();
      const options = { timeZone: "Asia/Kolkata", hour12: true, hour: "2-digit", minute: "2-digit", second: "2-digit" };
      document.getElementById("liveTime").innerText = now.toLocaleString("en-US", options) + " IST";
    }
    setInterval(updateTime, 1000); updateTime();

    // Weather
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(async pos => {
        const res = await fetch(`https://api.open-meteo.com/v1/forecast?latitude=${pos.coords.latitude}&longitude=${pos.coords.longitude}&current=temperature_2m`);
        const data = await res.json();
        document.getElementById("weatherDisplay").innerHTML = `Delhi: ${Math.round(data.current.temperature_2m)}°C | Clear`;
      });
    }

    // Loader
    window.onload = () => setTimeout(() => {
      document.getElementById("loader").style.opacity = "0";
      setTimeout(() => document.getElementById("loader").style.display = "none", 600);
    }, 1000);

    // Razorpay Payment
    document.getElementById("payBtn")?.addEventListener("click", () => {
      const autoPay = document.getElementById("autoPay").checked;

      fetch("/subscriptions/create-subscription", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          planId: "<%= plan._id %>",
          razorpayPlanId: "<%= plan.razorpayPlanId %>",
          autoPay: autoPay
        })
      })
      .then(r => r.json())
      .then(data => {
        if (!data.success) return alert("Subscription creation failed!");

        const options = {
          key: "<%= razorpayKey %>",
          subscription_id: data.subscriptionId,
          name: "E TIMES INDIA 24",
          description: "<%= plan.name %>",
          image: "/logo/logo.png",
          prefill: { email: "<%= user?.email %>", contact: "<%= user?.phone %>" },
          theme: { color: "#c80000" },
          handler: function (response) {
            fetch("/subscriptions/verify", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                paymentId: response.razorpay_payment_id,
                subscriptionId: response.razorpay_subscription_id,
                planId: "<%= plan._id %>",
                autoPay: autoPay
              })
            })
            .then(r => r.json())
            .then(res => {
              if (res.success) {
                document.getElementById("successMsg").style.display = "block";
                setTimeout(() => window.location = "/subscriptions/success", 2000);
              } else alert("Payment failed!");
            });
          }
        };
        new Razorpay(options).open();
      });
    });
  </script>
</body>
</html>