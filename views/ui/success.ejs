  <meta name="google-adsense-account" content="ca-pub-7964315381421081">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500;600;700&display=swap" rel="stylesheet">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      overflow: hidden;
    }
    .success-card {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border-radius: 24px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 60px 40px;
      max-width: 480px;
      width: 100%;
      text-align: center;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
      animation: float 6s ease-in-out infinite;
    }
    .checkmark-circle {
      width: 100px;
      height: 100px;
      background: #00e676;
      border-radius: 50%;
      margin: 0 auto 30px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 10px 30px rgba(0, 230, 118, 0.4);
      animation: pop 0.6s ease-out;
    }
    .checkmark-circle svg {
      width: 56px;
      height: 56px;
      stroke: white;
      stroke-width: 5;
      stroke-linecap: round;
      stroke-linejoin: round;
      fill: none;
    }
    h1 {
      font-size: 2.8rem;
      font-weight: 700;
      color: white;
      margin-bottom: 16px;
      background: linear-gradient(90deg, #ffffff, #e0e0e0);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    p {
      font-size: 1.2rem;
      color: rgba(255, 255, 255, 0.9);
      line-height: 1.6;
      margin-bottom: 40px;
    }
    .home-btn {
      display: inline-block;
      background: white;
      color: #667eea;
      font-weight: 600;
      font-size: 1.1rem;
      padding: 14px 40px;
      border-radius: 50px;
      text-decoration: none;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    .home-btn:hover {
      transform: translateY(-4px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
      background: #f8f9ff;
    }
    .home-btn:active {
      transform: translateY(-1px);
    }
    .home-btn::after {
      content: "â†’";
      margin-left: 10px;
      font-size: 1.3em;
      transition: transform 0.3s ease;
    }
    .home-btn:hover::after {
      transform: translateX(8px);
    }

    /* Animations */
    @keyframes pop {
      0% { transform: scale(0); }
      80% { transform: scale(1.15); }
      100% { transform: scale(1); }
    }
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-20px); }
    }
  </style>
</head>
<body>

  <div class="success-card">
    <div class="checkmark-circle">
      <svg viewBox="0 0 60 60">
        <polyline points="10,30 22,42 48,16" />
      </svg>
    </div>
    <h1>Success!</h1>
    <p>Your action was completed perfectly.<br>Everything is ready to go!</p>
    
    <a href="/" class="home-btn">
      Back to Home
    </a>
  </div>

</body>
</html>